#! /bin/sh

# Create aestats.template.html file

t=__ae.$$
trap 'rm -f $t; exit 0' 0 1 2 3 13 15

# We require npm which may not be installed.
type npm > /dev/null 2>&1 || {
        echo 's_aestats: npm not found' >&2
        echo '    npm is part of node.js from http://nodejs.org' >&2
        exit 1
}

cd ../tools/aestats/template || exit 1

out=aestats.html.template
rm -f $out

# Run npm install.
test -d ./node_modules || {
	echo 'Running: npm install'
	npm --quiet install >$t 2>&1 || {
		echo "s_aestats: npm install failed" >&2
		cat $t
		exit 1
	}
}
echo 'Running: npm run build'
npm --quiet run build >$t 2>&1 || {
        echo "s_aestats: npm run build failed" >&2
        cat $t
        exit 1
}
test -f $out || {
        echo "s_aestats: $out not created" >&2
        cat $t
        exit 1
}

f=../$out
cmp $out $f > /dev/null 2>&1 ||
        (echo "Building $out" && rm -f $f && cp $out $f)
exit 0
